<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100"
    android:padding="20sp"
    android:orientation="vertical"
    android:gravity="center">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:src="@drawable/icon_nfc"/>

        <TextView
            android:id="@+id/tv_dialog_nfc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2sp"
            android:text="Ricerca NFC..."
            android:textAlignment="center"
            android:textColor="@color/dark_transparent"
            android:textSize="16sp" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"/>

        <Button
            android:id="@+id/b_dialog_nfc_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:padding="10sp"
            android:text="Timbra manualmente"
            android:backgroundTint="@color/teal_300"
            android:textColor="@color/white_100"
            android:textSize="16sp" />


        <Button
            android:id="@+id/b_dialog_nfc_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:padding="10sp"
            android:text="Annulla"
            android:textColor="@color/white_100"
            android:backgroundTint="@color/Negative"
            android:textSize="16sp" />

</LinearLayout>