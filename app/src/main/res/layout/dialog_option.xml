<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100"
    android:padding="20sp"
    android:orientation="vertical"
    android:gravity="center">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:src="@drawable/icon_info"/>
        <TextView
            android:id="@+id/tv_dialog_option_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATTENZIONE"
            android:textAlignment="center"
            android:textColor="@color/Negative"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_dialog_option_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:text="Lorem Ipsum"
            android:textAlignment="center"
            android:textColor="@color/dark_transparent"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">

                <Button
                    android:id="@+id/b_dialog_option_not"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4sp"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="NO"
                    android:textColor="@color/white_100"
                    android:backgroundTint="@color/Negative"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/b_dialog_option_yes"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4sp"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="SI"
                    android:textColor="@color/white_100"
                    android:backgroundTint="@color/teal_300"
                    android:textSize="14sp" />


        </LinearLayout>


</LinearLayout>