<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/et_auth_username"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/white_100"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="20sp"
            android:hint="Username"
            android:background="@drawable/edittext_custom_selector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_auth_password"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginTop="30sp"
            android:inputType="textPassword"
            android:textColor="@color/white_100"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="20sp"
            android:hint="Password"
            android:background="@drawable/edittext_custom_selector"
            app:layout_constraintTop_toBottomOf="@+id/et_auth_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/b_auth_confirm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:src="@drawable/icon_next"
            app:tint="@color/white_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>